--TEST--
"autoescape" tags can be nested at will
--TEMPLATE--
{{ var }}
{% autoescape 'html' %}
  {{ var }}
  {% autoescape false %}
    {{ var }}
    {% autoescape 'html' %}
      {{ var }}
    {% endautoescape %}
    {{ var }}
  {% endautoescape %}
  {{ var }}
{% endautoescape %}
{{ var }}
--DATA--
return array('var' => '<br />')
--EXPECT--
&lt;br /&gt;
  &lt;br /&gt;
      <br />
          &lt;br /&gt;
        <br />
    &lt;br /&gt;
&lt;br /&gt;
