--TEST--
"autoescape" tag applies escaping on its children
--TEMPLATE--
{% autoescape %}
{{ var }}<br />
{% endautoescape %}
{% autoescape 'html' %}
{{ var }}<br />
{% endautoescape %}
{% autoescape false %}
{{ var }}<br />
{% endautoescape %}
{% autoescape false %}
{{ var }}<br />
{% endautoescape %}
--DATA--
return ['var' => '<br />']
--EXPECT--
&lt;br /&gt;<br />
&lt;br /&gt;<br />
<br /><br />
<br /><br />
