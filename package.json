{
  "name": "Directus",
  "version": "6.4.9",
  "description": "API-driven content management framework for custom databases",
  "main": "gulpfile.js",
  "scripts": {
    "test": "./node_modules/karma/bin/karma start",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/directus/directus.git"
  },
  "author": "RANGER Studio LLC",
  "bugs": {
    "url": "https://github.com/directus/directus/issues"
  },
  "xo": {
    "envs": ["amd", "browser"],
    "ignores": ["assets", "vendor"],
    "space": true,
    "esnext": false,
    "rules": {
      "import/no-amd": 0,
      "camelcase": 0,
      "capitalized-comments": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "func-name-matching": "warn",
      "no-warning-comments": "warn"
    }
  },
  "private": true,
  "homepage": "http://getdirectus.com",
  "devDependencies": {
    "gulp": "~3.8.10",
    "gulp-archiver": "^1.0.0",
    "gulp-clean": "~0.3.1",
    "gulp-concat": "~2.4.2",
    "gulp-exclude-gitignore": "~1.0.0",
    "gulp-flatten": "^0.3.1",
    "gulp-gh-pages": "~0.5.4",
    "gulp-gzip": "^1.4.0",
    "gulp-jshint": "~1.9.0",
    "gulp-minify-css": "~0.3.11",
    "gulp-print": "~1.1.0",
    "gulp-processhtml": "^1.0.2",
    "gulp-rename": "~1.2.0",
    "gulp-requirejs": "~0.1.3",
    "gulp-sass": "^3.1.0",
    "gulp-size": "~1.1.0",
    "gulp-uglify": "~1.5.4",
    "gulp-zip": "^4.0.0",
    "jasmine-core": "~2.3.4",
    "karma": "~0.13.9",
    "karma-jasmine": "~0.3.6",
    "karma-phantomjs-launcher": "~0.2.1",
    "karma-requirejs": "~0.2.2",
    "merge-stream": "~0.1.7",
    "moment": "^2.18.1",
    "phantomjs": "~2.1.1",
    "requirejs": "~2.1.20",
    "run-sequence": "~1.0.2",
    "xo": "^0.18.1"
  }
}
