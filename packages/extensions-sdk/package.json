		"rollup-plugin-styles": "4.0.0",
		"semver": "7.6.3",
		"vite": "4.5.5",
		"vue": "3.5.13"
	},
	"devDependencies": {
		"@directus/tsconfig": "3.0.0",
		"@types/fs-extra": "11.0.4",
		"@types/inquirer": "9.0.7",
		"@types/semver": "7.5.8",
		"@vitest/coverage-v8": "2.1.8",
		"typescript": "5.7.3",
		"vitest": "2.1.8"
	},
	"engines": {
		"node": ">=12.20.0"
	}
